<?xml version="1.0" encoding="utf-8"?>
<com.teamcube.rubricscube.Views.GreenFaceInputView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <!--green top -->
        <Button
            android:id="@+id/green01"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@+id/green04"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/green02"
            android:background="@color/colorPrimary"

        />
        <Button
            android:id="@+id/green02"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@+id/green05"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dp"
            android:background="@color/colorPrimary"

        />
        <Button
            android:id="@+id/green03"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@+id/green06"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/green02"
            android:background="@color/colorPrimary"

        />

        <!--green middle -->
        <Button
            android:id="@+id/green04"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/green05"
            android:background="@color/colorPrimary"
        />
        <Button
            android:id="@+id/green05"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/colorGreen"
            android:gravity="center"
        />

        <Button
            android:id="@+id/green06"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/green05"
            android:background="@color/colorPrimary"
        />

        <!--green bottom -->
        <Button
            android:id="@+id/green07"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/green04"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:layout_toLeftOf="@+id/green08"
            android:background="@color/colorPrimary"
        />
        <Button
            android:id="@+id/green08"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/green05"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:background="@color/colorPrimary"
        />
        <Button
            android:id="@+id/green09"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/green06"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/green08"
            android:background="@color/colorPrimary"
        />

        <!--Transition to other page button -->
        <!--at bottom -->
        <Button
            android:id="@+id/greenTransitionToYellow"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@color/colorYellow"
        />
        <!-- at left -->
        <Button
            android:id="@+id/greenTransitionToOrange"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:background="@color/colorOrange"
            android:gravity="center"
        />

        <!-- At right -->
        <Button
            android:id="@+id/greenTransitionToRed"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:background="@color/colorRed"
            android:gravity="center"
        />

        <!-- at Top -->
        <Button
            android:id="@+id/greenTransitionToWhite"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@color/colorWhite"

        />
    </RelativeLayout>

</com.teamcube.rubricscube.Views.GreenFaceInputView>