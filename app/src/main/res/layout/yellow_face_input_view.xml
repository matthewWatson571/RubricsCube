<?xml version="1.0" encoding="utf-8"?>
<com.teamcube.rubricscube.Views.YellowFaceInputView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <!--yellow top -->
        <Button
            android:id="@+id/yellow01"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@+id/yellow04"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/yellow02"
            android:background="@color/colorPrimary"

        />
        <Button
            android:id="@+id/yellow02"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@+id/yellow05"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dp"
            android:background="@color/colorPrimary"

        />
        <Button
            android:id="@+id/yellow03"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@+id/yellow06"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/yellow02"
            android:background="@color/colorPrimary"

        />

        <!--yellow middle -->
        <Button
            android:id="@+id/yellow04"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@+id/yellow05"
            android:background="@color/colorPrimary"
        />
        <Button
            android:id="@+id/yellow05"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/colorYellow"
            android:gravity="center"
        />

        <Button
            android:id="@+id/yellow06"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/yellow05"
            android:background="@color/colorPrimary"
        />

        <!--yellow bottom -->
        <Button
            android:id="@+id/yellow07"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/yellow04"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp"
            android:layout_toLeftOf="@+id/yellow08"
            android:background="@color/colorPrimary"
        />
        <Button
            android:id="@+id/yellow08"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/yellow05"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:background="@color/colorPrimary"
        />
        <Button
            android:id="@+id/yellow09"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/yellow06"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/yellow08"
            android:background="@color/colorPrimary"
        />

        <!--Transition to other page button -->
        <!--at bottom -->
        <Button
            android:id="@+id/yellowTransitionToRed"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@color/colorRed"
        />
        <!-- at left -->
        <Button
            android:id="@+id/yellowTransitionToBlue"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:background="@color/colorBlue"
            android:gravity="center"
        />

        <!-- At right -->
        <Button
            android:id="@+id/yellowTransitionToGreen"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:background="@color/colorGreen"
            android:gravity="center"
        />

        <!-- at Top -->
        <Button
            android:id="@+id/yellowTransitionToOrange"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@color/colorOrange"

        />
    </RelativeLayout>

</com.teamcube.rubricscube.Views.YellowFaceInputView>